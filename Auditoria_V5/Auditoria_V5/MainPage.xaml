<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Auditoria_V5"
             x:Class="Auditoria_V5.MainPage" BackgroundColor="{StaticResource BackgroundColor}" >

    <StackLayout BackgroundColor="{StaticResource BackgroundColor}" Padding="5">
        <!-- Place new controls here -->

        <Image 
           Source="almacen21.png" HeightRequest="200"
            WidthRequest="200"
            Aspect="Fill"
            
            />

        <Label TextColor="{StaticResource FontColor}" BackgroundColor="{StaticResource BackgroundColor}" FontSize="Large" HorizontalOptions="CenterAndExpand" >Auditorias</Label>

        <StackLayout Orientation="Vertical">
            <Button x:Name="btnConex" Text="Conecta Scanner" Image="ic_if_bluetooth_1608580.png" ContentLayout="Left, -40" BorderRadius="25" Clicked="onBtnConec" HeightRequest="50" WidthRequest="150" BackgroundColor="{StaticResource MainColor}"/>
            <Button x:Name="btnNueva" Text="Nueva Auditoria" BorderRadius="25" Clicked="onBtnStart" HeightRequest="50" WidthRequest="150" BackgroundColor="{StaticResource MainColor}"/>
            <Button x:Name="btnContinua" Text="Continuar Auditoria" BorderRadius="25" Clicked="onBtnContinue" HeightRequest="50" WidthRequest="150" IsEnabled="False" BackgroundColor="{StaticResource MainColor}"/>
            
            <Button x:Name="btnResults" Text="Resultados" BorderRadius="25" Clicked="onResults" HeightRequest="50" WidthRequest="150" BackgroundColor="{StaticResource MainColor}" IsEnabled="False"/>
            
          
        </StackLayout>
    </StackLayout>
    

</ContentPage>