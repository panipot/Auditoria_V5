<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Auditoria_V5.ListaUbics" Title="ListaUbics"
            BackgroundColor="{StaticResource BackgroundColor}" >


    <!--<ScrollView>-->
        <StackLayout Padding="5">
        
            <StackLayout Orientation="Horizontal">
            <Label Text="Ubicacion" HorizontalOptions="StartAndExpand" TextColor="{StaticResource FontColor}"></Label>
            <Label Text="Nº NOCS/ Err. / Revisada" HorizontalOptions="End" HorizontalTextAlignment="End" TextColor="{StaticResource FontColor}"></Label>
           
        </StackLayout>
        <BoxView HeightRequest="4" Color="{StaticResource FontColor}" ></BoxView>
        <ListView x:Name="listView" Margin="5" ItemSelected="OnListItemSelected" Style="{StaticResource Celda}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Margin="5,0,0,0" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                <Label Text="{Binding Ubicacion}" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" TextColor="{StaticResource FontColor}"/>
                                <Label Text="{Binding Num_nocs}" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" TextColor="{StaticResource FontColor}"/>
                                <!--<Label Text="{Binding Noc}" VerticalTextAlignment="Center" HorizontalOptions="CenterAndExpand" />-->
                                <Image Source="check.png"  IsVisible="{Binding Error}" />
                                <Image Source="checkOk.png" HorizontalOptions="End" IsVisible="{Binding Check_total}" />
                            </StackLayout>


                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackLayout>
    <!--</ScrollView>-->

</ContentPage>